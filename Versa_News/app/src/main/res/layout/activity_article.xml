<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        tools:context="com.adi.ho.jackie.versa_news.ArticleActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="#000000" />
            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AUTHOR"
                android:layout_below="@+id/imageView"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingLeft="5dp"
                android:paddingTop="3dp" />

            <com.facebook.share.widget.ShareButton
                android:id="@+id/sharebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/authorTextView"
                android:background="#0a66ac"
                android:padding="8dp"
                android:clickable="true"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE"
                android:textColor="#999999"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/authorTextView"
                android:layout_toRightOf="@+id/authorTextView"
                android:layout_toEndOf="@+id/authorTextView"
                android:paddingLeft="12dp" />


            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textSize="40dp"
                android:layout_above="@+id/authorTextView"
                android:layout_centerHorizontal="true"
                android:textColor="#ffffff" />
            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/articleText"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="205dp"
                android:textSize="18sp"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CATEGORy"
                android:id="@+id/articleCategory"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingTop="5dp"
                android:paddingRight="3dp"
                android:textSize="15sp"
                android:textColor="#ffffff" />
            <!--<ImageButton-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/twitterButton"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_below="@+id/textView"-->
                <!--android:padding="5dp"-->
                <!--android:background="#FFFFFF" />-->
            <!--&lt;!&ndash;android:src="@drawable/ic_action_twitter"&ndash;&gt;-->
            <!--<com.twitter.sdk.android.core.identity.TwitterLoginButton-->
                <!--android:id="@+id/twitter_login_button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerInParent="true" />-->
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

